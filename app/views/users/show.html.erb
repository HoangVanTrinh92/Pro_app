<div id="user-info">
  <h2><%= @user.email %></h2><br>
  <p><%= link_to "Change your password", edit_user_registration_path, class: "btn btn-primary" %></p>
</div>
<div id="wish-list">
  <div class = "books">
    <h1>You wish list books</h1>
    <% @user.books.each do |book| %>
      <div class =  "book">

        <div class="book-image">
          <%= link_to book_path(book) do %>
            <%= image_tag book.picture, class: "image-book" if book.picture? %>
          <% end %>
        </div>

        <div class="title">
          <%= link_to book_path(book) do %>
            <%= book.title %>
            <span><img class="callout" src="../assets/callout_black.gif" /><%= book.title %></span>
          <% end %>
        </div>

        <div class="author">
          <%= book.author %>
        </div>

        <div class="number page">
          <small>
            <strong>Number Page:</strong>
            <%= book.number_page %>
          </small>
        </div>

        <div class="publish date">
          <small>
            <strong>Publish Date:</strong>
            <%= book.publish_date %>
          </small>
        </div>
      </div>
    <% end %>
    <br>
  </div>
</div>
