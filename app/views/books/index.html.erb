
<p id="notice"><%= notice %></p>
<div class = "books">
  <h1>Listing Books</h1>

  <table>
    <tbody>
      <% @books.each do |book| %>
        <div class =  "book">

          <p>
            <%= link_to book_path(book) do %>
              <%= image_tag book.picture if book.picture? %>
            <% end %>
          </p>

          <div class="title">
            <%= link_to book_path(book) do %>
              <%= book.title %>
              <span><img class="callout" src="../assets/callout_black.gif" /><%= book.title %></span>
            <% end %>
          </div>
          <p>
            <strong>Publish date:</strong>
            <%= book.publish_date %>
          </p>

          <p>
            <strong>Author:</strong>
            <%= book.author %>
          </p>

          <p>
            <strong>Number page:</strong>
            <%= book.number_page %>
          </p>

          <p>
            <strong>Category:</strong>
            <%= book.category %>
          </p>

          <p>
            <%= link_to_if current_user, 'Show', book_path(book) %>
          </p>

        </div>
      <% end %>
    </tbody>
  </table>
<br>
</div>
